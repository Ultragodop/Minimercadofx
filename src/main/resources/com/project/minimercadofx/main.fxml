<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.project.minimercadofx.controllers.MainController"
           style="-fx-background-color: linear-gradient(to bottom right, #2193b0, #6dd5ed);">

    <HBox>
        <!-- SIDEBAR IZQUIERDA -->
        <VBox fx:id="sidebar" spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Logo y título -->
            <VBox alignment="CENTER" spacing="5">
                <Text text="MiniMercado" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2193b0;"/>
                <Separator style="-fx-background-color: #cccccc;"/>
            </VBox>

            <!-- Botones del menú -->
            <VBox spacing="10">
                <Button text="Inventario" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Button text="Ventas" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Button text="Compras" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Button text="Gastos" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Separator style="-fx-background-color: #cccccc;"/>
                
                <!-- Sección de Reportes -->
                <TitledPane text="Reportes" expanded="false"
                           style="-fx-text-fill: #2193b0; -fx-font-size: 14;">
                    <VBox spacing="5">
                        <Button text="Reportes Generales" maxWidth="Infinity"
                                style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                        <Button text="Reportes Financieros" maxWidth="Infinity"
                                style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                    </VBox>
                </TitledPane>
                
                <Button text="Empleados" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Botones inferiores -->
            <VBox spacing="5">
                <Button text="Configuración" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Button text="Cambiar Tema" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2193b0; -fx-font-size: 14; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
                
                <Separator style="-fx-background-color: #cccccc;"/>
                
                <!-- Información de usuario -->
                <VBox alignment="CENTER" spacing="5" style="-fx-padding: 10;">
                    <StackPane style="-fx-background-color: #2193b0; -fx-background-radius: 50;" minWidth="60" minHeight="60"/>
                    <Label text="Admin" style="-fx-text-fill: #2193b0; -fx-font-weight: bold;"/>
                    <Button text="Cerrar Sesión" 
                            style="-fx-background-color: #2193b0; -fx-text-fill: white; -fx-font-size: 12; -fx-background-radius: 20; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
        </VBox>

        <!-- CONTENIDO PRINCIPAL -->
        <VBox fx:id="content" spacing="20" HBox.hgrow="ALWAYS" style="-fx-padding: 20;">
            <!-- Barra superior -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 10; -fx-padding: 15;">
                <Label text="Bienvenido al Sistema" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2193b0;"/>
            </HBox>

            <!-- Área de contenido principal -->
            <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 10;">
                <padding>
                    <Insets/>
                </padding>
                <Label text="Seleccione una opción del menú" style="-fx-text-fill: #666666;"/>
            </StackPane>
        </VBox>
    </HBox>
</StackPane>
