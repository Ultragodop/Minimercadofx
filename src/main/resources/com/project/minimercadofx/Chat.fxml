<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.minimercadofx.controllers.ChatController"
      stylesheets="@styles/chat.css"
      styleClass="chat-root"
      alignment="TOP_CENTER"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Cabecera -->
    <Label text="Chat WebSocket"
           styleClass="header"
           prefWidth="400"
           alignment="CENTER"/>

    <!-- Área principal de mensajes -->
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="message-pane">
        <content>
            <TextFlow fx:id="mensajesFlow"
                      prefWidth="350"
                      prefHeight="400"
                      styleClass="messages-flow"/>
        </content>
    </ScrollPane>

    <!-- Área de entrada de texto y botón Enviar -->
    <HBox alignment="CENTER_LEFT"
          spacing="10"
          styleClass="input-area">

        <TextArea fx:id="TextArea"
                  prefWidth="300"
                  prefHeight="40"
                  promptText="Escribe un mensaje..."
                  wrapText="true"
                  styleClass="text-input"/>

        <Button text="Enviar"
                onAction="#enviarMensaje"
                styleClass="send-button"/>
    </HBox>
</VBox>
