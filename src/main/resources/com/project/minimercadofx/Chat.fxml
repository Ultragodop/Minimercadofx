<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.minimercadofx.controllers.ChatController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>



    <Label style="-fx-font-size: 20px;" text="Chat WebSocket" />

    <ScrollPane fitToWidth="true" fitToHeight="true">
        <TextFlow fx:id="mensajesFlow" prefHeight="400.0" prefWidth="300.0" />
    </ScrollPane>



    <HBox alignment="CENTER" spacing="10">
        <TextArea fx:id="TextArea" prefHeight="0.0" prefWidth="400.0" />

        <Button onAction="#enviarMensaje" text="Enviar" />
    </HBox>

</VBox>
