<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.minimercadofx.controllers.CategoriaController"
            prefHeight="400.0" prefWidth="600.0">
    
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" 
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        
        <GridPane hgap="10" vgap="5">
            <padding>
                <Insets bottom="10"/>
            </padding>
            
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="descripcionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <CheckBox fx:id="activoCheck" text="Activo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button text="Añadir Categoría" onAction="#onAnadirCategoria"/>
                <Button text="Limpiar" onAction="#onLimpiarFormulario"/>
            </HBox>
        </GridPane>
        
        <TableView fx:id="categoriasTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="descripcionColumn" text="Descripción" prefWidth="200"/>
                <TableColumn fx:id="activoColumn" text="Activo" prefWidth="100"/>
                <TableColumn fx:id="fechaCreacionColumn" text="Fecha Creación" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
